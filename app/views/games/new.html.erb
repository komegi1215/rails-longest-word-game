<h1>New Game</h1>

<% @letters.each do |letter| %>
<div class = "card">
  <div class = "box"><%= letter %></div>
</div>
<% end %>

<form action="/score" method="post" data-turbo="false">
  <div class="form-label">
    <label for="name">What is the longest word you can find?</label>
  </div>
  <div class="form-game">
    <input type="text" name="search" id="form1" class="form-control">
  </div>
  <div class="form-button">
    <input type="submit" value="Play" class="btn btn-primary" data-mdb-ripple-init>
     <i class="fas fa-search"></i>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
